{
  "name": "depcost",
  "version": "0.1.8",
  "description": "Retrieve the time and space cost of using a dependency",
  "main": "index.js",
  "bin": {
    "depcost": "bin/cli.js",
    "dc": "bin/cli.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "keywords": [
    "dependency"
  ],
  "scripts": {
    "test": "jest",
    "cov": "jest --coverage",
    "lint": "xo --fix lib",
    "prepublishOnly": "conventional-changelog -p angular -r 2 -i CHANGELOG.md -s",
    "depcost": "node bin/cli.js --record --npm-client=npm"
  },
  "repository": {
    "url": "git@github.com:rich-lab/depcost.git",
    "type": "git"
  },
  "author": "ULIVZ <chl814@foxmail.com>",
  "license": "MIT",
  "dependencies": {
    "cac": "6.4.0",
    "chalk": "^3.0.0",
    "execa": "^4.0.0",
    "fs-extra": "^8.1.0",
    "npmlog": "^4.1.2",
    "ini": "^1.3.5",
    "strip-ansi": "^6.0.0",
    "globby": "^11.0.0"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.31",
    "xo": "0.27.2",
    "jest-cli": "^24.8.0"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "no-await-in-loop": "off"
    }
  }
}
